<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="aliaksandr.hryharovich">
        <createTable tableName="meetup">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="aliaksandr.hryharovich">
        <insert tableName="meetup">
            <column name="id" value="1"/>
            <column name="name" value="Java meetup"/>
        </insert>
    </changeSet>

    <changeSet id="3" author="aliaksandr.hryharovich">
        <insert tableName="meetup">
            <column name="id" value="2"/>
            <column name="name" value="Python meetup"/>
        </insert>
    </changeSet>


</databaseChangeLog>